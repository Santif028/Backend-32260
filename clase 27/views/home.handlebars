<div class="containerProducts">
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container-fluid">
      <div class="collapse navbar-collapse d-flex justify-content-center" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/api/products">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/api/carts">Cart</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" onclick="location.href='/auth/logout'">LOGOUT</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
    <h1>All products</h1>
    
    <div class="products">
        {{#each products}}
        <div class="card" style="width: 18rem;">
            <img src={{this.thumbnail}} class="card-img-top" alt="...">
            <div class="card-body d-flex flex-column align-items-center">
                <h5 class="card-title">{{this.title}}</h5>
                <p class="card-text">{{this.category}}</p> 
                <p class="card-text">{{this.description}}</p>
                <p class="card-text">Price: ${{this.price}}</p> 
                <a href="api/products/{{this._id}}" class="btn btn-primary">More details</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>