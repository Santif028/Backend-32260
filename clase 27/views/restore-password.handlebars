 <div class="containerAuth">

      <h1>Password recovery</h1>
      <form class="form" action="/auth/restaurarPassword" method="post" role="form" autocomplete="off">

        <div class="form-group">
          <input id="email" name='email' placeholder="usuario" class="form-control" type="text" required>
        </div>

        <div class="form-group">
          <input id="password" name='password' placeholder="password" class="form-control" type="password" required>
        </div>

        <div class="form-group">
          <input class="btn btn-success my-3" type="submit" value="Restaurar">
        </div>
      </form>

      <div class="text-left">
        <button class="btn btn-success my-3" onclick="location.href = '/auth/register'">Register</button>
        <button class="btn btn-success my-3" onclick="location.href = '/auth/login'">Login</button>
      </div>
  </div>